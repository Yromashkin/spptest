#include <iostream>

using namespace std;

int main()
{
    srand(time(NULL));
    int A[3][3];
    int n=3, D=0, im, jm, sum = 0, min = A[0][0], max = A[0][0];
    for (int i=0;i<n;i++) 
        for (int j=0;j<n;j++) 
            A[i][j] = rand()%20 - 10;

    for (int i=0;i<n;i++) {
        for (int j=0;j<n;j++) {
           cout << A[i][j] << "   "; }
           cout << endl; }
           
   for (int i=0;i<n;i++) 
        for (int j=0;j<n;j++) 
            if (A[i][j]>max) {
                im = i;
                jm = j;
            }
            
    A[im][jm] = 0;
    im = 0; jm = 0;
            
    for (int i=0;i<n;i++) 
        for (int j=0;j<n;j++) 
            if (A[i][j]<min) {
                im = i;
                jm = j;
            }
            
    A[im][jm] = 0; 
    
    cout << endl;
    
    for (int i=0;i<n;i++) {
    for (int j=0;j<n;j++) {
        cout << A[i][j] << "   "; }
        cout << endl; }
            
    for (int i=0;i<n;i++) 
        for (int j=0;j<n;j++)  
        sum = sum + A[i][j];
    cout << "summ=" << sum; 
    
}
